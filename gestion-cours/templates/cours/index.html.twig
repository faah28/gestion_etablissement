{% extends 'base.html.twig' %}

{% block title %}Gestion des Cours{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Liste des Cours</h1>

    <a href="{{ path('app_cours_new') }}" class="btn btn-primary mb-3">Ajouter un Cours</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom du Cours</th>
                <th>Description</th>
                <th>Professeur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for cours in cours_list %}
                <tr>
                    <td>{{ cours.id }}</td>
                    <td>{{ cours.nomCours }}</td>
                    <td>{{ cours.description }}</td>
                    <td>{{ cours.prof.nom }} {{ cours.prof.prenom }}</td>
                    <td>
                        <a href="{{ path('app_cours_edit', { id: cours.id }) }}" class="btn btn-warning btn-sm">Modifier</a>
                        <a href="{{ path('app_cours_delete', { id: cours.id }) }}" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce cours ?');">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Aucun cours trouvé.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
